.menu-wrp {
  width:100%;
  margin-top:20rpx;
}
.menu-wrp:after{
    content:"";
    display:block;
    clear:both;
}
 
.menu-list{
    float:left;
    width:50%;
    box-sizing: border-box;
    padding-bottom:10px;
}
 
.menu-img{
    width:120rpx;
    height:84rpx;
    display:block;
    margin:0 auto;
    margin-bottom:5px;
}
.menu-desc{
    background-color:#ffffff;
    color:#333333;
    width:100%;
    text-align: center;
    display:block;
    font-size:12px;
}
.gap-1,.gap-2{
    width:100%;
    height:10rpx;
    background:rgb(238, 238, 238);
}
.a{
  display: flex;
  width:100%;
  margin-top:20rpx;
  justify-content:space-around;
}

.a1{
  width:120rpx;
  height:84rpx;
  margin-bottom:5px;
  order: 3;
  flex-grow:1;
}

.a2{
  width:120rpx;
  height:84rpx;
  margin-bottom:5px;
  order: 2;
  flex-grow:3;
}

.a3{
  width:120rpx;
  height:84rpx;
  margin-bottom:5px;
  order: 4;
  flex-grow:1;
}

.a4{
  width:120rpx;
  height:84rpx;
  margin-bottom:5px;
  order: 1;
  flex-grow:1;
}